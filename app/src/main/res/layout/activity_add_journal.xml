<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addJournalActivity">

    <EditText
        android:id="@+id/journalEntryET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter title and a journal entry"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveJournalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Journal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="@+id/journalEntryET"
        app:layout_constraintTop_toBottomOf="@+id/journalEntryET" />


</androidx.constraintlayout.widget.ConstraintLayout>